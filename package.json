{
  "name": "xiaohe-stylelint-config",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.5.2",
  "description": "ðŸ¤š Stylelint config preset for xiaohe",
  "scripts": {
    "prepare": "simple-git-hooks",
    "build": "nr -r --filter=./packages/* build",
    "release": "bumpp -r",
    "lint": "eslint --cache",
    "lint:fix": "nr lint --fix",
    "lint:type": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@antfu/ni": "^23.3.1",
    "@antfu/utils": "^9.1.0",
    "@xiaohe01/eslint-config": "^1.2.0",
    "@xiaohe01/tsconfig": "^1.0.0",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "esno": "^4.8.0",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.7.3",
    "unbuild": "^3.5.0",
    "vite": "^6.2.0",
    "vitest": "^3.0.7"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
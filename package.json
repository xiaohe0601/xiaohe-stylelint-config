{
  "name": "xiaohe-stylelint-config",
  "type": "module",
  "version": "0.0.3",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "description": "ðŸ¤š Stylelint config preset for xiaohe",
  "scripts": {
    "prepare": "simple-git-hooks",
    "build": "nr -r --filter=./packages/* build",
    "release": "bumpp -r",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "lint:type": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@antfu/ni": "^23.2.0",
    "@antfu/utils": "^8.1.0",
    "@xiaohe01/eslint-config": "^0.0.10",
    "@xiaohe01/tsconfig": "^0.0.2",
    "bumpp": "^9.10.1",
    "eslint": "^9.18.0",
    "esno": "^4.8.0",
    "lint-staged": "^15.3.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.6.3",
    "unbuild": "^2.0.0",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}